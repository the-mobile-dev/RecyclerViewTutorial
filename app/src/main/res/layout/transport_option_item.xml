<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/transport_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_airport_shuttle_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/transport_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/transport_image"
        app:layout_constraintTop_toTopOf="@+id/transport_image"
        tools:text="Bus" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/transport_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/transport_image"
        app:layout_constraintEnd_toEndOf="@+id/transport_title"
        app:layout_constraintStart_toStartOf="@+id/transport_title"
        app:layout_constraintTop_toBottomOf="@+id/transport_title"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Tum mihi Piso: Quid ergo?" />


</androidx.constraintlayout.widget.ConstraintLayout>